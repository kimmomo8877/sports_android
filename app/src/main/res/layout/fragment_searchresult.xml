<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
                <Button
                    android:id="@+id/button_searchResult_facility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시설" />
                <Button
                    android:id="@+id/button_searchResult_team"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="스포츠" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.ornach.nobobutton.NoboButton
            android:id="@+id/button_searchResult_kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:nb_drawableResource="@drawable/ic_phone"
            app:nb_backgroundColor="#EF3D56"
            app:nb_borderColor="#FFFFFF"
            app:nb_borderWidth="2dp"
            app:nb_radius="5dp"
            app:nb_text="종목"
            app:nb_textColor="#FFF"
            app:nb_focusColor="#B83CC3"/>

        <com.ornach.nobobutton.NoboButton
            android:id="@+id/button_searchResult_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:nb_drawableResource="@drawable/ic_phone"
            app:nb_backgroundColor="#EF3D56"
            app:nb_borderColor="#FFFFFF"
            app:nb_borderWidth="2dp"
            app:nb_radius="5dp"
            app:nb_text="지역"
            app:nb_textColor="#FFF"
            app:nb_focusColor="#B83CC3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler_searchResult_facility"/>
    </LinearLayout>

</LinearLayout>