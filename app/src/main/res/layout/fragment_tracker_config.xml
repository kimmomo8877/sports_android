<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:weightSum="10"
        tools:context=".ui.tracker.TrackerConfigFragment">

    <TextView
            android:text="트래커 사용에 필요한 정보를 입력해주세요."
            android:textSize="20sp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="6"
            android:weightSum="5"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:text="나이"/>
            <EditText
                    android:id="@+id/et_trackerConfig_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:text=""/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginVertical="10dp"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:text="몸무게"/>
            <EditText
                    android:id="@+id/et_trackerConfig_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:text=""/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:weightSum="4"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center_horizontal"
                    android:textSize="15sp"
                    android:text="키"/>
            <EditText
                    android:id="@+id/et_trackerConfig_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:text=""/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:weightSum="4"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center_horizontal"
                    android:textSize="15sp"
                    android:text="걸음목표"/>
            <EditText
                    android:id="@+id/et_trackerConfig_goal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:text=""/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:weightSum="4"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center_horizontal"
                    android:textSize="15sp"
                    android:text="센터"/>
            <Spinner
                    android:id="@+id/spinner_trackerConfig_center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:text=""/>
        </LinearLayout>
    </LinearLayout>
    <TextView android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>

    <com.ornach.nobobutton.NoboButton
            android:id="@+id/btn_trackerConfig_toTrackerMain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="30dp"
            app:nb_text="저장"
            app:nb_borderColor="#FFFFFF"
            app:nb_borderWidth="2dp"
            app:nb_backgroundColor="#6200EE"
            app:nb_focusColor="#B83CC3"
            app:nb_textColor="#FFF"
            app:nb_textSize="20sp"
            app:nb_radius="10dp"
    />

    <com.ornach.nobobutton.NoboButton
            android:id="@+id/btn_trackerConfig_toLogin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="30dp"
            app:nb_text="로그인"
            app:nb_borderColor="#FFFFFF"
            app:nb_borderWidth="2dp"
            app:nb_backgroundColor="#6200EE"
            app:nb_focusColor="#B83CC3"
            app:nb_textColor="#FFF"
            app:nb_textSize="20sp"
            app:nb_radius="10dp"
    />
</LinearLayout>